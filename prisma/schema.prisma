generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      String   @default("user")
  createdAt DateTime @default(now())
}

model Jewellery {
  id        String   @id @default(uuid())
  name      String
  category  String
  price     Float
  weight    Float?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
